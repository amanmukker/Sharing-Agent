<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff3f3f3"
    tools:context=".ShareMenu" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="#fff3f3f3"
        android:orientation="vertical"
        android:padding="5dp" >
      
        <LinearLayout
            android:id="@+id/imgLL"
            android:layout_width="fill_parent"
            android:layout_height="202dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="fill_parent"
                android:layout_height="192dp"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/textLL"
            android:layout_width="fill_parent"
            android:layout_height="106dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <EditText
                android:id="@+id/editTxt"
                android:layout_width="fill_parent"
                android:layout_height="96dp"
                android:background="#fff3f3f3"
                android:hint="Enter Message"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="@color/green"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="#fff3f3f3"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <Button
                android:id="@+id/fbButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/fbook"
                android:text="Facebook"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight=".3"
                android:background="#fff3f3f3"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/txButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/tw"
                android:text="Twitter"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="#fff3f3f3"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/lnLL"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <Button
                android:id="@+id/gpButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/gp"
                android:text="Google+"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight=".3"
                android:background="#fff3f3f3"
                android:orientation="horizontal" />

             <Button
                android:id="@+id/insButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/ins"
                android:text="Instagram"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/lnButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/ln"
                android:text="LinkedIn"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="#fff3f3f3"
            android:orientation="horizontal" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <Button
                android:id="@+id/hoButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/ho"
                android:text="Hangouts"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight=".3"
                android:background="#fff3f3f3"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/waButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/wa"
                android:text="WhatsApp"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>